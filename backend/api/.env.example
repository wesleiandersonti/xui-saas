# =============================================================================
# XUI-SaaS Backend API Environment Configuration
# =============================================================================
# This is the backend-specific environment configuration
# Copy to .env and configure with actual values
# NEVER commit .env files with real secrets
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development

# =============================================================================
# DATABASE - MySQL/MariaDB
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=xui_saas
# Use strong password (>16 chars) in production
DB_PASSWORD=your_secure_db_password_here
DB_NAME=xui_saas
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=60000

# =============================================================================
# REDIS CACHE (Optional but Recommended)
# =============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
JWT_ISSUER=xui-saas
JWT_AUDIENCE=xui-saas

# =============================================================================
# ENCRYPTION KEYS
# =============================================================================
# For XUI password encryption (exactly 32 characters)
XUI_ENCRYPTION_KEY=your-32-char-encryption-key!!

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS Origins (comma-separated, or * for development only)
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MS=300000

# =============================================================================
# PLAYLIST SECURITY SETTINGS
# =============================================================================
PLAYLIST_MAX_REDIRECTS=2
PLAYLIST_TIMEOUT_MS=20000
PLAYLIST_MAX_BYTES=5000000
PLAYLIST_MAX_CHANNELS=20000
# Comma-separated list of allowed domains
PLAYLIST_ALLOWLIST=
PLAYLIST_USER_AGENT=XUI-SaaS-Playlist-Client/1.0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# TMDB API for VOD metadata
TMDB_API_KEY=your_tmdb_api_key

# Mercado Pago (Optional)
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# Evolution API for WhatsApp (Optional)
EVOLUTION_API_URL=https://your-evolution-api.com
EVOLUTION_API_KEY=your_evolution_api_key

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Email/SMTP (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
# Use app-specific password for Gmail
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
# Options: error, warn, info, debug, verbose

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
# SENTRY_ENVIRONMENT=production

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable Swagger UI (disable in production)
ENABLE_SWAGGER=true

# Detailed error messages (disable in production)
DETAILED_ERRORS=false

# Debug mode
DEBUG=false
